      jQuery(function ($) {
        $('#username').keyup(function (e) {
          if (e.which === 32) {
            var str = $(this).val();
            str = str.replace(/\s/g, '');
            $(this).val(str);
          }
        }).blur(function () {
          var str = $(this).val();
          str = str.replace(/\s/g, '');
          $(this).val(str);
        });
      });

